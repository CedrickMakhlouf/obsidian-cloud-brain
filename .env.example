# ============================================================
# Azure OpenAI instellingen
# ============================================================
AZURE_OPENAI_ENDPOINT="https://your-resource.openai.azure.com/"
AZURE_OPENAI_API_KEY="your-openai-key"
AZURE_OPENAI_DEPLOYMENT_NAME="gpt-4o"
AZURE_OPENAI_EMBEDDING_DEPLOYMENT="text-embedding-3-small"

# ============================================================
# Azure AI Search instellingen
# ============================================================
AZURE_SEARCH_SERVICE_ENDPOINT="https://your-search.search.windows.net"
AZURE_SEARCH_ADMIN_KEY="your-search-admin-key"
AZURE_SEARCH_INDEX_NAME="obsidian-notes"

# ============================================================
# Azure Storage
# ============================================================
AZURE_STORAGE_CONNECTION_STRING="DefaultEndpointsProtocol=https;AccountName=your-account;AccountKey=your-key;EndpointSuffix=core.windows.net"
AZURE_STORAGE_CONTAINER_NAME="obsidian-vault"

# ============================================================
# Obsidian Vault (lokaal pad, alleen voor ingestion-script)
# ============================================================
OBSIDIAN_VAULT_PATH="C:/Users/your-naam/pad/naar/vault"